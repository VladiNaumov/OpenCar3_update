<!doctype html>

 <!--установка языка шаблона  вместо тега <html lang="en"> -->
 <html dir="{{ direction }}" lang="{{ lang }}">
 
 
<head>
    <!--установка категории viewport для адаптивности  -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
	
	<!-- вывод title  Элемент title дает представление о содержании страницы и ее релевантности поисковому запросу. 
	Он может использоваться в качестве заголовка в сниппете страницы.  -->
    <title>{{ title }}</title>
	
	<!-- вывод метатега для поисковой системы  -->
    {% if robots %}
        <meta name="robots" content="{{ robots }}" />
    {% endif %}
	
	<!-- базовый URL странице  -->
    <base href="{{ base }}" />
	
	<!-- вывод description -->
    {% if description %}
        <meta name="description" content="{{ description }}" />
    {% endif %}
	
	<!-- вывод keywords -->
    {% if keywords %}
        <meta name="keywords" content="{{ keywords }}" />
    {% endif %}
	
	<!-- метатеги социальных сетей   -->
    <meta property="og:title" content="{{ title }}" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="{{ og_url }}" />
	
    {% if og_image %}
        <meta property="og:image" content="{{ og_image }}" />
    {% else %}
        <meta property="og:image" content="{{ logo }}" />
    {% endif %}
    <meta property="og:site_name" content="{{ name }}" />
	
	<!-- подключение скриптов  -->
    <script src="catalog/view/theme/antropy/bootstrap/js/bootstrap.bundle.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="catalog/view/theme/antropy/js/main.js"></script>

	<!-- подключение стилей  -->
    {% for style in styles %}
        <link href="{{ style.href }}" type="text/css" rel="{{ style.rel }}" media="{{ style.media }}" />
    {% endfor %}
	
	<!-- подключение javascript  -->
    {% for script in scripts %}
        <script src="{{ script }}" type="text/javascript"></script>
    {% endfor %}

	<!--   -->
    <script src="catalog/view/theme/antropy/js/common.js" type="text/javascript"></script>
	
	<!-- подключение стилей   -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.2/css/all.css" integrity="sha384-vSIIfh2YWi9wW0r9iZe7RJPrKwp6bG+s9QZMoITbCckVJqGCCRhc+ccxNcdpHuYu" crossorigin="anonymous">
    <link rel="stylesheet" href="catalog/view/theme/antropy/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="catalog/view/theme/antropy/css/main.css">

	<!-- вывод  favikon  -->
    {% for link in links %}
        <link href="{{ link.href }}" rel="{{ link.rel }}" />
    {% endfor %}

	<!--  вывод кода  google analytic -->
    {% for analytic in analytics %}
        {{ analytic }}
    {% endfor %}
	
</head>


